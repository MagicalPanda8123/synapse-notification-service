generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  type      NotificationType
  title     String?
  message   String?
  metadata  Json?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId, createdAt])
}

enum NotificationType {
  POST_CREATED //
  POST_APPROVED
  POST_REJECTED
  POST_LOCKED //
  POST_UNLOCKED //
  POST_REMOVED

  COMMENT_CREATED
  COMMENT_REPLIED

  POST_UPVOTED
  COMMENT_UPVOTED

  USER_MENTION

  JOIN_REQUEST_CREATED
  JOIN_REQUEST_APPROVED
  JOIN_REQUEST_REJECTED

  MEMBER_PROMOTED
  MEMBER_DEMOTED
  MEMBER_BANNED
  MEMBER_UNBANNED

  REPORT_CREATED
  REPORT_RESOLVED
  REPORT_DISMISSED

  MODERATION_ACTION_TAKEN

  COMMUNITY_SUSPENDED
  COMMUNITY_REACTIVATED

  USER_BANNED
  USER_UNBANNED
  ROLE_CHANGED
}
